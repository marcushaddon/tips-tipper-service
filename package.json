{
  "name": "tips-tipper-service",
  "version": "1.0.0",
  "description": "Manages tippers",
  "main": "dist/index.js",
  "scripts": {
    "run-local": "export NODE_ENV=local TIPS_JWT_SECRET=local-secret AWS_PROFILE=marcus && npm run build && node dist/index.js",
    "run-test": "export NODE_ENV=test && node dist/index.js",
    "run-prod": "export NODE_ENV=prod && node dist/index.js",
    "build": "tsc --rootDir src --outDir dist && npm run build-schema",
    "build-schema": "./node_modules/.bin/typescript-json-schema src/main/model/TipsUser.ts TipsUser > dist/src/main/model/TipsUser.schema.json && cp dist/src/main/model/TipsUser.schema.json src/main/model && echo \"TODO: improve this\"",
    "test": "export NODE_ENV=test && jest src --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcushaddon/tips-tipper-service.git"
  },
  "author": "Marcus Haddon",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/marcushaddon/tips-tipper-service/issues"
  },
  "homepage": "https://github.com/marcushaddon/tips-tipper-service#readme",
  "devDependencies": {
    "@types/config": "0.0.36",
    "@types/express": "^4.17.3",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.3",
    "jest": "^25.1.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.8.1",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^8.3.8",
    "aws-sdk": "^2.613.0",
    "body-parser": "^1.19.0",
    "config": "^3.3.0",
    "dynamodb-data-types": "^3.0.1",
    "express": "^4.17.1",
    "jsonschema": "^1.2.5",
    "jsonwebtoken": "^8.5.1",
    "pm2": "^4.2.3",
    "typescript-json-schema": "^0.42.0",
    "winston": "^3.2.1"
  }
}
